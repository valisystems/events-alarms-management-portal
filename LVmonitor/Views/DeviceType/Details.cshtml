@model LvMonitor.Models.Lvm_DeviceType
<div class="lvm-box">
    <div class="lvm-box-header">
        <span>@ViewBag.Title @ViewBag.SubTitle</span>
    </div>
    <div class="lvm-box-body">
        <div>
            <dl class="dl-horizontal">
                <dt>
                    Name
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DeviceTypeName)
                </dd>

                <dt>
                    Description
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DeviceTypeDescription)s
                </dd>
            </dl>
        </div>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.DeviceTypeId })
        </p>
    </div>
</div>