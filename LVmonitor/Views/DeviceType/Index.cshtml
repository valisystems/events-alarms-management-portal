@model IEnumerable<LvMonitor.Models.Lvm_DeviceType>
<div class="lvm-box">
    <div class="lvm-box-header">
        <span>@ViewBag.Title</span>
    </div>
    <div class="lvm-box-body">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table table-striped lvm-table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th class="lvm-th-ico"></th>
            </tr>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DeviceTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeviceTypeDescription)
                </td>
                <td class="lvm-td-ico">
                    @Html.ActionLink(" ", "Details", "DeviceType", new { id = item.DeviceTypeId }, new { @class = "fa fa-eye" })&nbsp;
                    @Html.ActionLink(" ", "Edit", "DeviceType", new { id = item.DeviceTypeId }, new { @class = "fa fa-pencil-square-o" })&nbsp;
                    @Html.ActionLink(" ", "Delete", "DeviceType", new { id = item.DeviceTypeId }, new { @class = "fa fa-trash" })
                </td>
            </tr>
            }
        </table>
    </div>
</div>
