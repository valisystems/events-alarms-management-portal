@model LvMonitor.Models.Lvm_Device

<div class="lvm-box">
    <div class="lvm-box-header">
        <span>@ViewBag.SubTitle @ViewBag.Title</span>
    </div>
    <div class="lvm-box-body">
        <p class="text-danger">@ViewBag.AreYouSure</p>
        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <dl class="dl-horizontal">
                <dt>
                    Facility
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Lvm_Facility.FacilityName)
                </dd>
                <dt>
                    Department
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Lvm_Department.DepartmentName)
                </dd>
                <dt>
                    Floor #
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Lvm_Room.FloorNumber)
                </dd>
                <dt>
                    Room #
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Lvm_Room.RoomNumber)
                </dd>
                <dt>
                    Device Type
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Lvm_DeviceType.DeviceTypeName)
                </dd>
                <dt>
                    Device #
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DeviceNumber)
                </dd>
                <dt>
                    Device ID
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DeviceCode)
                </dd>
                <dt>
                    Name
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DeviceName)
                </dd>
                <dt>
                    Description
                </dt>
                <dt>
                    Media Type
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Lvm_MediaType.MediaType)
                </dd>
                <dt>
                    Media File
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ImageFile)
                </dd>
                <dt>
                    Image
                </dt>
                <dd>
                    @{
                      if (!string.IsNullOrWhiteSpace(Model.ImageFile))
                      {
                          if (Model.MediaTypeId > 1)
                          {
                        <video class="LvmLstImg140" controls>
                            <source src="@Model.ImageFile" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                          }
                          else
                          {
                              if (Model.ImageFile.IndexOf(@"/") < 0)
                              {
                        <img class="LvmLstImg140" src="@Url.Content(string.Format("{0}{1}/{2}", ViewBag.ImgPath, Model.FacilityId, Model.ImageFile))" alt="" />
                              }
                              else
                              {
                        <img class="LvmLstImg140" src="@Model.ImageFile" alt="" />
                                  }
                              }
                          }
                      }
                </dd>
                <dd>
                    @Html.DisplayFor(model => model.DeviceDescription)
                </dd>
            </dl>
            @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <div class="col-md-offset-1 col-md-9">
                    <input type="submit" value="Delete" class="btn btn-default" />
                </div>
            </div>
            }
        </div>
    </div>
</div>