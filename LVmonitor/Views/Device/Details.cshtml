@model LvMonitor.Models.Lvm_Device

<div class="lvm-box">
    <div class="lvm-box-header">
        <span>@ViewBag.Title @ViewBag.SubTitle</span>
    </div>
    <div class="lvm-box-body">
        <div class="row">
            <div class="col-md-4">
                <dl class="dl-horizontal">
                    <dt>
                        Facility
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Lvm_Facility.FacilityName)
                    </dd>
                    <dt>
                        Department
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Lvm_Department.DepartmentName)
                    </dd>
                    <dt>
                        Floor #
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Lvm_Room.FloorNumber)
                    </dd>
                    <dt>
                        Room #
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Lvm_Room.RoomNumber)
                    </dd>
                    <dt>
                        Device Type
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Lvm_DeviceType.DeviceTypeName)
                    </dd>
                    <dt>
                        Device #
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DeviceNumber)
                    </dd>
                    <dt>
                        Device ID
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DeviceCode)
                    </dd>
                    <dt>
                        Name
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DeviceName)
                    </dd>
                    <dt>
                        Description
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DeviceDescription)
                    </dd>
                    <dt>
                        Media Type
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Lvm_MediaType.MediaType)
                    </dd>
                    <dt>
                        Media File
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ImageFile)
                    </dd>
                    @*<dt>
                            Image
                        </dt>
                        <dd>
                            @{
                              if (Model.MediaTypeId > 1)
                              {
                                <video class="LvmLstImg140" controls>
                                    <source src="@Model.ImageFile" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
