@model LvMonitor.Models.HistoryTemplate

<div class="lvm-box">
    <div class="lvm-box-header">
        <span>@ViewBag.SubTitle @ViewBag.Title</span>
    </div>
    <div class="lvm-box-body">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.HistoryTemplateId)
            @Html.HiddenFor(model => model.HistoryTemplateFile)
            <div class="form-group">
                @Html.Label("History Template File", htmlAttributes: new { @class = "control-label col-md-2 lv" })
                <div class="col-md-10">
                    @Html.Label(Model.HistoryTemplateFile, htmlAttributes: new { @class = "form-control LvmFormLabel", @style = "font-weight:normal; padding-left:0;" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Html, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Html, new { htmlAttributes = new { @class = "form-control", @style = "height:200px; width: 600px; max-width: 600px" } })
                    @Html.ValidationMessageFor(model => model.Html, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Css, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Css, new { htmlAttributes = new { @class = "form-control lvmTextArea", @style = "height:200px; width: 600px; max-width: 600px" } })
                    @Html.ValidationMessageFor(model => model.Css, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" /> &nbsp;&nbsp;&nbsp;
                    @Html.ActionLink("Restore Default", "RestoreDefault", new { @class="btn btn-default" }, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
        }
    </div>
</div>