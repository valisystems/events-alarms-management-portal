@model IEnumerable<LvMonitor.Models.Lvm_Facility>

<div class="lvm-box">
    <div class="lvm-box-header">
        <span>@ViewBag.Title</span>
    </div>
    <div class="lvm-box-body">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table table-striped lvm-table">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Time Zone
                </th>
                <th>
                    CRD Type
                </th>
                <th>
                    CDR Domain
                </th>
                <th>
                    PbxUser
                </th>
                <th style="text-align: center;">
                    Device<br />Discovery
                </th>
                <th class="lvm-th-ico"></th>
            </tr>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.FacilityId)
                </td>
                <td>
                    @Html.DisplayFor(m => item.FacilityName)
                </td>
                <td>
                    @Html.DisplayFor(m => item.FacilityDescription)
                </td>
                <td>
                    @TimeZoneInfo.FindSystemTimeZoneById(item.TimeZoneId)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Lvm_CdrType.CdrType)
                </td>
                <td>
                    @Html.DisplayFor(m => item.CdrDomain)
                </td>
                <td>
                    @Html.DisplayFor(m => item.PbxUser)
                </td>
                <td style="text-align: center;">
                    @Html.DisplayFor(m => item.IsDeviceDiscovery)
                </td>
                <td class="lvm-td-ico">
                    @Html.ActionLink(" ", "Details", "Facility", new { id = item.FacilityId }, new { @class = "fa fa-eye" })&nbsp;
                    @Html.ActionLink(" ", "Edit", "Facility", new { id = item.FacilityId }, new { @class = "fa fa-pencil-square-o" })&nbsp;
                    @Html.ActionLink(" ", "Delete", "Facility", new { id = item.FacilityId }, new { @class = "fa fa-trash" })
                </td>
            </tr>
            }
        </table>
    </div>
</div>
