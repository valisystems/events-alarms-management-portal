@model LvMonitor.Models.Lvm_ResourceText
<div class="lvm-box">
    <div class="lvm-box-header">
        <span>@ViewBag.Title @ViewBag.SubTitle</span>
    </div>
    <div class="lvm-box-body">
        <div>
            <dl class="dl-horizontal">
                <dt>
                    Text Type
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Lvm_ResourceTextType.ResourceTextType)
                </dd>
                <dt>
                    Text
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ResourceText)
                </dd>
                <dt>
                    Description
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
        </div>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.ResourceTextId })
        </p>
    </div>
</div>