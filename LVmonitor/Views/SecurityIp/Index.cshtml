@model IEnumerable<LvMonitor.Models.Lvm_SecurityIp>
<div class="lvm-box">
    <div class="lvm-box-header">
        <span>@ViewBag.Title</span>
    </div>
    <div class="lvm-box-body">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table table-striped lvm-table">
            <tr>
                <th>
                    IP
                </th>
                <th>
                    Is White IP
                </th>
                <th>
                    Is Black IP
                </th>
                <th>
                    Facility
                </th>
                <th class="lvm-th-ico"></th>
            </tr>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsIpWhite)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsIpBlack)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lvm_Facility.FacilityName)
                </td>
                <td class="lvm-td-ico">
                    @Html.ActionLink(" ", "Details", "SecurityIp", new { id = item.SecurityIpId }, new { @class = "fa fa-eye" })&nbsp;
                    @Html.ActionLink(" ", "Edit", "SecurityIp", new { id = item.SecurityIpId }, new { @class = "fa fa-pencil-square-o" })&nbsp;
                    @Html.ActionLink(" ", "Delete", "SecurityIp", new { id = item.SecurityIpId }, new { @class = "fa fa-trash" })
                </td>
            </tr>
            }
        </table>
    </div>
</div>