@model IEnumerable<LvMonitor.Models.Lvm_Country>
<div class="lvm-box">
    <div class="lvm-box-header">
        <span>@ViewBag.Title</span>
    </div>
    <div class="lvm-box-body">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table table-striped lvm-table">
                <tr>
                    <th>
                        Code
                    </th>
                    <th>
                        Name
                    </th>
                    <th class="lvm-th-ico"></th>
                </tr>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="lvm-td-ico">
                        @Html.ActionLink(" ", "Details", "Country", new { id = item.CountryId }, new { @class = "fa fa-eye" })&nbsp;
                        @Html.ActionLink(" ", "Edit", "Country", new { id = item.CountryId }, new { @class = "fa fa-pencil-square-o" })&nbsp;
                        @Html.ActionLink(" ", "Delete", "Country", new { id = item.CountryId }, new { @class = "fa fa-trash" })
                    </td>
                </tr>
                }
            </table>
    </div>
</div>
