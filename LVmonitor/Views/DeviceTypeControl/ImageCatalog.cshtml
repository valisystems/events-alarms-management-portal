@model IEnumerable<LvMonitor.Models.Lvm_Image>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h3 class="modal-title">Image Catalog</h3>
</div>
<div class="modal-body">
    <div style="overflow-y: auto;">
        @foreach (var item in Model)
        {
        <div class="lvm-imgcat-div">
            <img onclick="CatImgSelect('@item.ImageId', '@item.ImageFile')" src="@Url.Content(string.Format("~{0}{1}", item.Lvm_ImageType.ImagePath, item.ImageFile))" alt="" />
        </div>
        }
    </div>

