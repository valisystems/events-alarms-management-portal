@model LvMonitor.Models.Lvm_DeviceTypeControl

<div class="lvm-box">
    <div class="lvm-box-header">
        <span>@ViewBag.SubTitle @ViewBag.Title</span>
    </div>
    <div class="lvm-box-body">
        <p class="text-danger">@ViewBag.AreYouSure</p>
        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <dl class="dl-horizontal">
                <dt>
                    Device Type
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Lvm_DeviceType.DeviceTypeName)
                </dd>
                <dt>
                    Number
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ControlNumber)
                </dd>
                <dt>
                    Control Type
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ControlCode)
                </dd>
                <dt>
                    Name
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ControlName)
                </dd>
                <dt>
                    Image Name
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ControlImage)
                </dd>
                <dt>
                    Image
                </dt>
                <dd>
                    <img class="LvmLstImg" src="@Url.Content(ViewBag.ImgPath + Model.ControlImage)" alt="" />
                </dd>
                <dt>
                    Description
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ControlDescription)
                </dd>
                <dt>
                    Chart Color
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ChartColor)
                </dd>
            </dl>
            @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <div class="col-md-offset-1 col-md-9">
                    <input type="submit" value="Delete" class="btn btn-default" />
                </div>
            </div>
            }
        </div>
    </div>
</div>